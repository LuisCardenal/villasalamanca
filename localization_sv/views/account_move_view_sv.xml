<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_view_sv" model="ir.ui.view">
        <field name="name">view.account_move</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="attributes">
                <attribute name = "readonly">True</attribute>
                <attribute name = "invisible">True</attribute>
                <attribute name = "String">Moneda en </attribute>
            </field>
             <field name="currency_id" position="attributes">
                <attribute name = "readonly">True</attribute>
                <attribute name = "string">con moneda en:</attribute>
            </field>

            <field name="invoice_date" position="attributes">
                <attribute name = "string">hi</attribute>
            </field>
            <xpath expr="//field[@name='payment_reference']" position="after">
            <field name="journal_invoice"/>
            </xpath>
        </field>
    </record>

</odoo>